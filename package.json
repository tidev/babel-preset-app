{
  "name": "@titanium-sdk/babel-preset-app",
  "version": "0.1.2",
  "description": "Default Babel preset for Titanium app projects",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
		"postinstall": "husky install",
		"prepublishOnly": "pinst --disable",
		"postpublish": "pinst --enable"
  },
  "keywords": [
    "titanium",
    "babel",
    "preset"
  ],
  "author": "Axway Appcelerator",
  "license": "Apache-2.0",
  "homepage": "https://github.com/appcelerator/babel-preset-app#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcelerator/babel-preset-app.git"
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "babel-plugin-transform-titanium": "^0.1.1",
    "core-js": "^3.6.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@seadub/danger-plugin-dependencies": "^1.0.0",
    "@seadub/danger-plugin-eslint": "^2.0.0",
    "@seadub/danger-plugin-junit": "^0.2.0",
    "danger": "^10.5.0",
    "eslint": "^7.1.0",
    "eslint-config-axway": "^6.0.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^5.1.1",
    "jest": "^26.0.1",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.4.2",
    "pinst": "^2.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js"
  ],
  "jest": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputName": "junit_report.xml"
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
